@model IEnumerable<jenkinsCICD.Models.Expense>

@{
    ViewData["Title"] = "Danh sách chi tiêu";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-receipt"></i> @ViewData["Title"]</h2>
    <a href="@Url.Action("Create")" class="btn btn-success">
        <i class="fas fa-plus-circle"></i> Thêm chi tiêu mới
    </a>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Tiêu đề</th>
                            <th>Số tiền</th>
                            <th>Danh mục</th>
                            <th>Người thanh toán</th>
                            <th>Nhóm</th>
                            <th>Ngày</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@item.Title</strong>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <br><small class="text-muted">@item.Description</small>
                                    }
                                </td>
                                <td>
                                    <span class="fw-bold text-success">
                                        @item.Amount.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@item.Category</span>
                                </td>
                                <td>
                                    <i class="fas fa-user text-primary"></i>
                                    @item.PaidByUser.Name
                                </td>
                                <td>
                                    @if (item.Group != null)
                                    {
                                        <span class="badge bg-info">@item.Group.Name</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Cá nhân</span>
                                    }
                                </td>
                                <td>@item.ExpenseDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-outline-info" title="Chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-outline-warning" title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-outline-danger" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <div class="mt-3">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h5 class="card-title">Tổng chi tiêu</h5>
                                <h3 class="text-success">@Model.Sum(e => e.Amount).ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h5 class="card-title">Số khoản chi tiêu</h5>
                                <h3 class="text-info">@Model.Count()</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-receipt fa-5x text-muted mb-3"></i>
                <h4 class="text-muted">Chưa có chi tiêu nào</h4>
                <p class="text-muted">Hãy thêm khoản chi tiêu đầu tiên để bắt đầu theo dõi tài chính.</p>
                <a href="@Url.Action("Create")" class="btn btn-success btn-lg">
                    <i class="fas fa-plus-circle"></i> Thêm chi tiêu đầu tiên
                </a>
            </div>
        }
    </div>
</div>
