@{
    ViewData["Title"] = "Trang chủ";
}

<div class="row">
    <div class="col-md-12">
        <div class="jumbotron bg-primary text-white text-center p-5 rounded mb-4">
            <h1 class="display-4"><i class="fas fa-chart-line"></i> Quản lý Tài chính Cá nhân</h1>
            <p class="lead">Theo dõi chi tiêu và quản lý nhóm mua chung một cách đơn giản và hiệu quả</p>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card border-success">
            <div class="card-body text-center">
                <i class="fas fa-money-bill-wave fa-3x text-success mb-3"></i>
                <h5 class="card-title">Tổng chi tiêu</h5>
                <h3 class="text-success">@(ViewBag.TotalExpenses?.ToString("C0", new System.Globalization.CultureInfo("vi-VN")) ?? "0 ₫")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-info">
            <div class="card-body text-center">
                <i class="fas fa-users fa-3x text-info mb-3"></i>
                <h5 class="card-title">Số nhóm hoạt động</h5>
                <h3 class="text-info">@(ViewBag.TotalGroups ?? 0)</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-warning">
            <div class="card-body text-center">
                <i class="fas fa-chart-bar fa-3x text-warning mb-3"></i>
                <h5 class="card-title">Chi tiêu gần đây</h5>
                <h3 class="text-warning">@(ViewBag.RecentExpenses?.Count ?? 0)</h3>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-clock"></i> Chi tiêu gần đây</h5>
            </div>
            <div class="card-body">
                @if (ViewBag.RecentExpenses != null && ViewBag.RecentExpenses.Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Tiêu đề</th>
                                    <th>Số tiền</th>
                                    <th>Người thanh toán</th>
                                    <th>Ngày</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var expense in ViewBag.RecentExpenses)
                                {
                                    <tr>
                                        <td>@expense.Title</td>
                                        <td class="text-success fw-bold">@expense.Amount.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</td>
                                        <td>@expense.PaidByUser.Name</td>
                                        <td>@expense.ExpenseDate.ToString("dd/MM/yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">Chưa có chi tiêu nào được ghi nhận.</p>
                }
                <div class="mt-3">
                    <a href="@Url.Action("Index", "Expense")" class="btn btn-primary">
                        <i class="fas fa-plus "></i> Thêm chi tiêu mới
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-rocket"></i> Thao tác nhanh</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="@Url.Action("Create", "Expense")" class="btn btn-success">
                        <i class="fas fa-plus-circle"></i> Thêm chi tiêu
                    </a>
                    <a href="@Url.Action("Create", "Group")" class="btn btn-info">
                        <i class="fas fa-users-plus"></i> Tạo nhóm mới
                    </a>
                    <a href="@Url.Action("Create", "User")" class="btn btn-warning">
                        <i class="fas fa-user-plus"></i> Thêm người dùng
                    </a>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5><i class="fas fa-info-circle"></i> Thông tin</h5>
            </div>
            <div class="card-body">
                <p class="card-text">
                    Ứng dụng giúp bạn quản lý chi tiêu cá nhân và chia sẻ chi phí trong nhóm mua chung một cách dễ dàng.
                </p>
            </div>
        </div>
    </div>
</div>
