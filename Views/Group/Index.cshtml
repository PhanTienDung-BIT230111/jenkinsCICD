@model IEnumerable<jenkinsCICD.Models.Group>

@{
    ViewData["Title"] = "Danh sách nhóm mua chung";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users"></i> @ViewData["Title"]</h2>
    <a href="@Url.Action("Create")" class="btn btn-success">
        <i class="fas fa-users-plus"></i> Tạo nhóm mới
    </a>
</div>

<div class="row">
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-primary">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-users"></i> @item.Name
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(item.Description))
                        {
                            <p class="card-text text-muted">@item.Description</p>
                        }
                        
                        <div class="row mb-3">
                            <div class="col-6 text-center">
                                <i class="fas fa-user-friends fa-2x text-info"></i>
                                <div><strong>@item.Members.Count(m => m.IsActive)</strong></div>
                                <small class="text-muted">Thành viên</small>
                            </div>
                            <div class="col-6 text-center">
                                <i class="fas fa-money-bill-wave fa-2x text-success"></i>
                                <div><strong>@item.Expenses.Sum(e => e.Amount).ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</strong></div>
                                <small class="text-muted">Tổng chi</small>
                            </div>
                        </div>
                        
                        <div class="mb-2">
                            <small class="text-muted">
                                <i class="fas fa-user"></i> Tạo bởi: <strong>@item.CreatedByUser.Name</strong>
                            </small>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="fas fa-calendar"></i> @item.CreatedAt.ToString("dd/MM/yyyy")
                            </small>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group w-100" role="group">
                            <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-outline-info" title="Chi tiết">
                                <i class="fas fa-eye"></i> Chi tiết
                            </a>
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-outline-warning" title="Chỉnh sửa">
                                <i class="fas fa-edit"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="text-center py-5">
                <i class="fas fa-users fa-5x text-muted mb-3"></i>
                <h4 class="text-muted">Chưa có nhóm nào</h4>
                <p class="text-muted">Hãy tạo nhóm đầu tiên để bắt đầu chia sẻ chi phí với bạn bè.</p>
                <a href="@Url.Action("Create")" class="btn btn-success btn-lg">
                    <i class="fas fa-users-plus"></i> Tạo nhóm đầu tiên
                </a>
            </div>
        </div>
    }
</div>

@if (Model.Any())
{
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Tổng số nhóm</h5>
                    <h3 class="text-primary">@Model.Count()</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <i class="fas fa-user-friends fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Tổng thành viên</h5>
                    <h3 class="text-info">@Model.Sum(g => g.Members.Count(m => m.IsActive))</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <i class="fas fa-money-bill-wave fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Tổng chi tiêu nhóm</h5>
                    <h3 class="text-success">@Model.Sum(g => g.Expenses.Sum(e => e.Amount)).ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</h3>
                </div>
            </div>
        </div>
    </div>
}
